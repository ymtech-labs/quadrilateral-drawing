{
  "name": "@ubstream/squares-manipulation",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "prepare": "husky install",
    "commit": "git cz",
    "test:unit": "vitest",
    "test:e2e": "playwright test"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@commitlint/cz-commitlint": "^17.7.1",
    "@playwright/test": "^1.37.1",
    "commitizen": "^4.3.0",
    "happy-dom": "^10.11.2",
    "husky": "^8.0.3",
    "sass": "^1.66.1",
    "typescript": "^5.2.2",
    "validate-branch-name": "^1.3.0",
    "vite": "^4.4.9",
    "vitest": "^0.34.3"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
   "husky": {
    "hooks": {
      "pre-commit": "npx validate-branch-name"
    }
  },
  "validate-branch-name": {
    "pattern": "^(master|dev){1}$|^(feature|fix|hotfix|release)\/.+$",
    "errorMsg": "ðŸ¤¨ The branch you're trying to pusher doesn't respect our conventions, you can rename it with `git branch -m <current-name> <new-name>`"
  }
}
